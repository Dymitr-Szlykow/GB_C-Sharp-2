<UserControl x:Class="CompanyApp.Controls.DepartmentDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompanyApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="267.188" d:DesignWidth="395.936">
    <Grid>
        <Label Content="Название:" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107"/>
        <Label Content="Местоположение:" Margin="0,26,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107"/>
        <Label Content="Заведующий:" Margin="0,52,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107"/>
        <TextBox Text="{Binding DepartmentDetailed.Title}" Height="23" Margin="112,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Text="{Binding DepartmentDetailed.Location}" Height="23" Margin="112,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="{Binding DepartmentDetailed.Manager.ShortName}" Margin="112,52,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="ReportBox" Text="" Margin="0,194,0,0" TextWrapping="Wrap" /><!--Text="{Binding ???}"-->

    </Grid>
</UserControl>
